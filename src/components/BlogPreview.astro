---
// src/components/BlogPreview.astro
import type { CollectionEntry } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const formattedDate = new Date(post.data.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a class="card" href={`/blog/${post.slug}`}>
  <div class="content">
    <div class="header">
      <div class="metadata">
        <span class="date">{formattedDate}</span>
        {post.data.readingTime && (
          <span class="reading-time">{post.data.readingTime} min read</span>
        )}
      </div>
      <h3 class="title">{post.data.title}</h3>
      {post.data.description && <p class="description">{post.data.description}</p>}
    </div>
    
    <div class="footer">
      {post.data.tags && (
        <div class="tags">
          {post.data.tags.map((tag) => <Pill>{tag}</Pill>)}
        </div>
      )}
    </div>
  </div>
</a>

<style>
  .card {
    display: block;
    padding: 2rem;
    background: var(--gray-999);
    border: 1px solid var(--gray-800);
    border-radius: 1rem;
    text-decoration: none;
    transition: all var(--theme-transition);
  }

  .card:hover {
    background: var(--gray-999_40);
    border-color: var(--gray-600);
    transform: translateY(-2px);
  }

  .content {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 1rem;
  }

  .header {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .metadata {
    display: flex;
    gap: 1rem;
    color: var(--gray-400);
    font-size: var(--text-sm);
  }

  .reading-time::before {
    content: "â€¢";
    margin-right: 1rem;
  }

  .title {
    font-size: var(--text-2xl);
    color: var(--gray-0);
    line-height: 1.3;
    margin: 0;
  }

  .description {
    color: var(--gray-300);
    line-height: 1.6;
    margin-top: 0.5rem;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  @media (min-width: 50em) {
    .card {
      padding: 2.5rem;
    }
  }
</style>